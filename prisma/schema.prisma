// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  client_name String?  
  type        Int?
  company_id  Int
  status      String
  user_id     Int
  procedures  Json?
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String  @unique
  metro_id  Int
  role_id      Int?
  password  String
  createdAt DateTime @default(now())

  assignments User_assign[]
}


model Procedure_item {
  id      Int      @id @default(autoincrement())
  label   String
  speech_suggestion_id Int?
  input_type  Int  
  data_source String?
  company_id  Int?
  ticket_type_id Int
  created_by Int
  modal_title String?
  modal_body Json?
}

model Procedure {
  id      Int      @id @default(autoincrement())
  ticket_type_id Int
  company_id  Int?
  items Json
}

model Speech_suggestion {
  id      Int      @id @default(autoincrement())
  text    String
}

model Company {
  id Int @id 
  threshold_1 Int?
  threshold_2 Int?
  fantasy_name String
}

model User_assign {
  id Int @id @default(autoincrement())
  company_id Int
  user_id Int
  queue_type Int?

  user User @relation(fields: [user_id], references: [id])
  @@unique([company_id, user_id, queue_type])

}

