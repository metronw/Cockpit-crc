// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  client_name String?  
  type        Int?
  company_id  Int
  status      String
  user_id     Int
  procedures  Json?
  communication_type String? // telephone ou chat
  communication_id     String? // asterisk ou chat
  caller_number  String?
  trunk_name    String?
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String  @unique
  metro_id  Int
  role_id      Int?
  password  String
  createdAt DateTime @default(now())

  assignments User_assign[]
}

model User_phone { // ramal
  id        Int      @id @default(autoincrement())
  sip_extension String   @unique
  sip_server    String
  sip_password  String
  sip_port      Int
  sip_websocket String
  user_id   Int     @unique
  createdAt DateTime @default(now())
  auto_answer   Boolean @default(false)
}

model Queue {
  id Int @id
  name      String
  company_id Int
  trunk_name String
  createdAt DateTime @default(now())
}

model PhonePrefix { // fila de saida 
  id        Int      @id @default(autoincrement())
  name      String
  number    String
  trunk     String
}

model Procedure_item {
  id      Int      @id @default(autoincrement())
  label   String
  speech_suggestion_id Int?
  input_type  Int  
  data_source String?
  company_id  Int?
  ticket_type_id Int
  created_by Int
  modal_title String?
  modal_body Json?
}

model Procedure {
  id      Int      @id @default(autoincrement())
  label   String
  ticket_type_id Int
  company_id  Int?
  items Json
}

model Speech_suggestion {
  id      Int      @id @default(autoincrement())
  text    String
}

model Company {
  id Int @id 
  threshold_1 Int?
  threshold_2 Int?
  fantasy_name String
}

model User_assign {
  id Int @id @default(autoincrement())
  company_id Int
  user_id Int
  queue_type Int?

  user User @relation(fields: [user_id], references: [id])
  @@unique([company_id, user_id, queue_type])

}

